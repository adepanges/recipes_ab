{
    "restartable": "rs",
    "verbose": true,
    "execMap": {
        "ts": "node --require ts-node/register"
    },
    "watch": [
        "dist/",
        "src/",
        "tsconfig.json",
        ".env",
        ".env_uat"
    ],
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "src/resources/admin-old/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}